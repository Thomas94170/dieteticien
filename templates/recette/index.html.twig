{% extends 'base.html.twig' %}

{% block title %}Hello RecetteController!{% endblock %}

{% block content %}
<div class="grid grid-rows-4 grid-flow-col gap-4">
{% for recette in recettes %}
   <div class="max-w-sm rounded overflow-hidden shadow-lg">

      <div class="px-6 py-4">
         <h3>{{ recette.titre }}</h3>
         <br/>
         <img src="{{ recette.image }}" alt="food"/>
         <p>{{ recette.description }}</p>
         <br/>
         <p>allergène : {{ recette.allergenes }}</p>
         <br>
         {% if recette.vegetarien ==1 %}
         <p class="text-green-500">Végétarien</p>
            {% elseif recette.vegetarien ==0 %}
               <p class="text-red-600">Non Végétarien</p>
               {% endif %}
         </p>
         <a href="{{ path('consulter_recette', {'id' : recette.id})}}">Voir la recette </a>
      </div>

   </div>

  {# {{dump(recette)}}#}

   {% endfor %}
</div>
   <br/><br/>
{% endblock %}
